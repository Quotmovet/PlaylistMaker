<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_blue"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="@dimen/panel_header_padding"
            android:text="@string/app_name"
            android:textColor="@color/yp_white"
            android:textSize="@dimen/text_size_app_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/yp_white"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/search"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/text_size_app_name"
            android:textAllCaps="false"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/yp_black" />

        <Button
            android:id="@+id/button_media"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/yp_white"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/media_library"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/text_size_app_name"
            android:textAllCaps="false"
            app:icon="@drawable/ic_media"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/yp_black" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/yp_white"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/settings"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/text_size_app_name"
            android:textAllCaps="false"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/yp_black" />

    </LinearLayout>
</LinearLayout>