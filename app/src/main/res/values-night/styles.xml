<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Общие стили LinearLayout для экранов -->

    <style name="MainActivityLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/yp_black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ActivityLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/yp_black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Стили экрана activity_main -->

    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ButtonStyleInMenu" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_size_app_name</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="textAllCaps">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стили текста и кнопки назад во всех headers -->

    <style name="TextStyleOfNavigationInHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">86dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_app_name</item>
    </style>

    <style name="ButtonStyleBack" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/primary_width_icons</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:tint">@color/yp_white</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <!-- Стили экрана activity_settings -->

    <style name="TextStyleOfMenuItems">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/primary_components_text_size</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:thumbTint">@color/yp_blue</item>
        <item name="android:trackTint">@color/yp_blue_light</item>
    </style>

    <style name="IconsStyle">
        <item name="android:layout_width">@dimen/primary_width_icons</item>
        <item name="android:layout_height">@dimen/primary_height_icons</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/yp_white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>

    <!-- Стили экрана activity_search -->

    <style name="SearchLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/search_box_background</item>
        <item name="android:backgroundTint">@color/yp_white</item>
    </style>

    <style name="SearchLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:drawableTint">@color/yp_black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:maxLength">31</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ClearButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/close_icon</item>
        <item name="android:tint">@color/yp_black</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>